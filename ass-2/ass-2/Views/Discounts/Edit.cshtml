<div class="container">
    <h2 class="my-4">Discounts</h2>

    <div class="row">
        <div class="col-md-6">
            <button class="btn btn-primary">
                <a class="nav-link text-white" href="@Url.Action("index", "Discounts")">Double 11 Special Discount</a>
            </button>
            <p class="my-2">
                Enjoy the biggest discounts of the year on Double 11! Don't miss out on our amazing deals!
            </p>
        </div>
        <div class="col-md-6">
            <button class="btn btn-primary">
                <a class="nav-link text-white" href="@Url.Action("Edit", "Discounts")">Student Verification Discount</a>
            </button>
            <p class="my-2">
                Are you a student? Verify your student status and enjoy exclusive discounts on our products!
            </p>
        </div>
    </div>

    <form id="studentForm" class="my-4">
        <div class="form-group">
            <label for="school">Please enter your university:</label>
            <input type="text" class="form-control" id="school" name="school" required>
        </div>
        <div class="form-group">
            <label for="studentId">Please enter your student ID:</label>
            <input type="text" class="form-control" id="studentId" name="studentId" required>
        </div>
        <div class="form-group">
            <label for="name">Please enter your name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <input type="submit" class="btn btn-primary" value="Submit">
    </form>

    <script>
        document.getElementById('studentForm').addEventListener('submit', function(event) {
            if (!event.target.checkValidity()) {
                event.preventDefault();
                alert('Please fill out all fields.');
            }
        });
    </script>

    <table class="table table-striped mt-4">
        // Your table code here...
    </table>
</div>